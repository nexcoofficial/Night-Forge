  <script>
    // --- Accessibility: FAQ accordion ---
    document.querySelectorAll('.faq-q').forEach(q => {
      q.addEventListener('click', function () {
        const parent = this.parentNode;
        parent.classList.toggle('open');
        this.setAttribute('aria-expanded', parent.classList.contains('open'));
      });
      q.addEventListener('keypress', function (e) {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          this.click();
        }
      });
    });

    // --- Product Variant Selection ---
    let selectedColor = 'BLACK';
    let selectedSize = 'S';
    let quantity = 1;

    function updateVariantBtns() {
      document.querySelectorAll('.variant-btn[data-variant="color"]').forEach(btn => {
        btn.classList.toggle('selected', btn.dataset.value === selectedColor);
        btn.setAttribute('aria-checked', btn.dataset.value === selectedColor);
      });
      document.querySelectorAll('.variant-btn[data-variant="size"]').forEach(btn => {
        btn.classList.toggle('selected', btn.dataset.value === selectedSize);
        btn.setAttribute('aria-checked', btn.dataset.value === selectedSize);
      });
    }
    function updatePayPalForm() {
      document.getElementById('paypal-color').value = selectedColor;
      document.getElementById('paypal-size').value = selectedSize;
      document.getElementById('paypal-quantity').value = quantity;
      // Price is static, but could be dynamic for variants
    }
    function updatePriceDisplay() {
      const price = 68.00 * quantity;
      document.getElementById('current-price').textContent = `$${price.toFixed(2)}`;
      document.getElementById('btn-price').textContent = `$${price.toFixed(2)}`;
      document.getElementById('paypal-amount').value = (68.00 * quantity).toFixed(2);
    }
    // Handle color selection
    document.querySelectorAll('.variant-btn[data-variant="color"]').forEach(btn => {
      btn.addEventListener('click', function () {
        selectedColor = this.dataset.value;
        updateVariantBtns();
        updatePayPalForm();
      });
    });
    // Handle size selection
    document.querySelectorAll('.variant-btn[data-variant="size"]').forEach(btn => {
      btn.addEventListener('click', function () {
        selectedSize = this.dataset.value;
        updateVariantBtns();
        updatePayPalForm();
      });
    });
    // Quantity change
    document.getElementById('quantity').addEventListener('input', function () {
      quantity = Math.max(1, Math.min(10, parseInt(this.value) || 1));
      this.value = quantity;
      updatePayPalForm();
      updatePriceDisplay();
    });

    // Scroll to buy now
    document.querySelectorAll('.cta-main').forEach(btn => {
      btn.addEventListener('click', function (e) {
        e.preventDefault();
        document.getElementById('buy-now').scrollIntoView({behavior: "smooth"});
      });
    });

    // Mobile: Default selection
    updateVariantBtns();
    updatePayPalForm();
    updatePriceDisplay();

    // Basic analytics event (for demonstration)
    document.getElementById('paypal-form').addEventListener('submit', function() {
      var img = document.createElement('img');
      img.src = 'https://nexco.com/analytics-pixel?event=paypal_checkout';
      img.alt = 'Analytics';
      img.className = 'analytics-pixel';
      document.body.appendChild(img);
    });
  </script>
